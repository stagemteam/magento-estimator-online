<?xml version="1.0" ?>
<config>
	<sections>
		<stagem_estimator module="stagem_estimator" translate="label">
			<label>Online Estimator</label>
			<sort_order>200</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<tab>stagem</tab>
			<groups>
				<general translate="label">
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
                        <enabled translate="label comment">
                            <label>Enable module</label>
                            <comment>Enable module and allow process information</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <file_extensions translate="label">
                            <label>File extensions</label>
                            <frontend_type>text</frontend_type>
                            <comment>Example: doc, docx, rtf, xls, xlsx</comment>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </file_extensions>
                        <recipient_email translate="label">
                            <label>Send Email Copy To</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </recipient_email>
                        <sender_email_identity translate="label">
                            <label>Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sender_email_identity>
                        <email_template translate="label">
                            <label>Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_template>
                        <ignored_brands translate="label">
                            <label>Brands to ignore</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>stagem_estimator/system_config_manufacturer</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                        </ignored_brands>
                    </fields>
				</general>
			</groups>
		</stagem_estimator>
	</sections>
</config>
